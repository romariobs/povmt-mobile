<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view_trade"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="5px"
    card_view:cardElevation="1dp"
    card_view:cardMaxElevation="1dp"
    card_view:cardUseCompatPadding="false"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:layout_marginTop="1dp"
            android:paddingLeft="20dp"
            android:textSize="14sp"
            android:text="Title"
            android:textColor="@color/colorBlack"
            android:layout_alignTop="@+id/game_photo_offered"
            android:layout_toRightOf="@+id/game_photo_offered"
            android:layout_toLeftOf="@+id/imageViewMenuOverflow" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewMenuOverflow"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_more_vert_black_18dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp" />



        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/game_photo_offered"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="18dp"
            android:src="@drawable/ic_assignment_black_24dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:paddingLeft="15dp"
            android:textSize="12sp"
            android:textColor="@color/colorGray"
            android:paddingTop="5dp"
            android:paddingRight="16dp"
            android:text="description"
            android:layout_below="@+id/title_activity"
            android:layout_toEndOf="@+id/game_photo_offered" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
