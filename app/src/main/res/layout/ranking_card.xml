<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view_trade"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4px"
    android:layout_marginLeft="4px"
    android:layout_marginRight="4px"
    card_view:cardElevation="4dp"
    card_view:cardMaxElevation="4dp"
    card_view:cardUseCompatPadding="false"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardCornerRadius="3dp">

    <RelativeLayout
        android:layout_width="383dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeSpend"
            android:textSize="12sp"
            android:textColor="@color/colorGreen"
            android:paddingRight="16dp"
            android:text="time spend"
            android:layout_below="@+id/title_activity"
            android:layout_alignStart="@+id/title_activity" />

        <TextView
            android:id="@+id/title_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:textSize="18sp"
            android:text="Title"
            android:textColor="@color/colorBlack"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/color_pie"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/positionRanking"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:paddingLeft="20dp"
            android:textSize="18sp"
            android:text="1"
            android:textColor="@color/colorBlack"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/color_pie"
            android:layout_marginRight="15dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/light"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/positionRanking" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
